{
  "name": "raxee-bot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "ts-node src/bot.ts",
    "compile": "tsc -p ./tsconfig.json --noEmit",
    "lint": "eslint --ext .js,.ts --ignore-path .eslintignore .",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@grammyjs/storage-file": "^2.0.0",
    "axios": "^0.27.2",
    "cross-env": "^7.0.3",
    "date-fns": "^2.28.0",
    "dotenv-flow": "^3.2.0",
    "form-data": "^4.0.0",
    "grammy": "^1.9.0",
    "nodemon": "^2.0.18",
    "remeda": "^0.0.35",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.4",
    "@types/node": "^16.11.7",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jest": "^28.1.2",
    "ts-jest": "^28.0.5"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "/src/.*.test.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
